<%- include ('./partials/authentication_header.ejs') %> 
	<div class="limiter">
		<div class="container-login100">
				
			<div class="wrap-login100 p-5">
				<form action="/login" method="POST" class="login100-form validate-form">
					<div class="logo-img text-center pb-3">
						<img src="/img/brand/logo-dark1.png" alt="logo-img">
					</div>
					<span class="login100-form-title">
						Member Login
					</span>
					
					<script>
						function dropSelect(r){
							if(r === 'user'){
								$("#plcholder").attr({"placeholder":"Email ID", "name" : "email"});
							}
							if(r === 'authority'){
								$("#plcholder").attr({"placeholder":"Authority ID", "name":"auth_id"});
							} 
							if(r === 'verifier'){
								$("#plcholder").attr({"placeholder":"Verifier ID", "name":"ver_id"});
							}
							$("#role").val(r);
							$('.dropdown-toggle').html(r);
  						}
					</script>

					<input type="hidden" id="role" name="role"></input>
					<div style="position: relative; width: 100%; margin-bottom: 10px" class="btn-group">
						<button style="color: black	;"  type="button" class="btn login100-form-btn btn-default btn-pill dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Select Role</button>
						<div class="dropdown-menu">
							<a class="dropdown-item" href="#" onclick="dropSelect('user')">User</a>
							<a class="dropdown-item" href="#" onclick="dropSelect('authority')">Authority</a>
							<a class="dropdown-item" href="#" onclick="dropSelect('verifier')">Verifier</a>
						</div>
					</div>
					
					

					<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
						<input class="input100" type="text" name="email" id="plcholder" placeholder="ID">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Password is required">
						<input class="input100" type="password" name="password" placeholder="Password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>

					<div class="container-login100-form-btn">
						<button type="submit" class="btn login100-form-btn btn-primary btn-pill mt-1 mb-1">Login</button>
					</div>

					<div class="text-center pt-2">
						<span class="txt1">
							Forgot
						</span>
						<a class="txt2" href="forgot.html">
							Username / Password?
						</a>
					</div>

					<div class="text-center pt-1">
						<a class="txt2" href="/signup">
							Create your Account
							<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>

<%- include ('./partials/authentication_footer.ejs') %>
